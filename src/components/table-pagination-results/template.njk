{%- set textShowing = params.textShowing if params.textShowing else 'Showing' %}
{%- set textTo = params.textTo if params.textTo else 'to' %}
{%- set textOf = params.textOf if params.textOf else 'of' %}
{%- set textItemType = params.textItemType if params.textItemType else 'xrecords' %}

{%- set numericClass = params.numericClasses if params.numericClasses else 'govuk-!-font-weight-bold' %}
{%- set maxPage = (params.totalRecords|int / params.pageSize) |int %}
{%- if maxPage * params.pageSize < params.totalRecords %}
  {%- set maxPage = maxPage + 1 %}
{%- endif %}
{%- set currentPage = params.currentPage|int %}
{%- if currentPage < 1 %}{%- set currentPage = 1 %}{%- endif %}
{%- if currentPage > maxPage %}{%- set currentPage = maxPage %}{%- endif %}
{%- if maxPage > 1 %}
<div class="govuk-body{%- if params.classes %} {{ params.classes }}{% else %} govuk-!-font-size-19{% endif %}"
    {%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor -%}
>{{ textShowing }} <span class="{{ numericClass }}">{{ (currentPage-1) * params.pageSize + 1 }}</span> {{ textTo }} <span class="{{ numericClass }}">
  {%- if currentPage * params.pageSize > params.totalRecords %}{{ params.totalRecords }}{% else %}{{ currentPage * params.pageSize }}{% endif %}</span> {{ textOf }} <span class="{{ numericClass }}">{{ params.totalRecords }}</span> {{ textItemType }}.</div>
{%- endif %}
